@model IPagedList<MovieListViewModel>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />


<div id="movieList">

    <div class="pagedList" data-yon-target="#movieList">
       
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }),
       PagedListRenderOptions.MinimalWithItemCountText)
    </div>


   

    @foreach (var item in Model)
    {
        <div>
            <h4>
                @item.Title
                @*@Html.ActionLink(@item.Title, "Index", "Reviews", new { id = item.Id }, null)*@ 
            </h4>




            <div>
                <p> Description: 
                <br />@item.Description</p>
                <p>Genre: @item.Genre</p>
                <p>Certifications: @item.Certificate</p>

                <p> Release Date: @Convert.ToString(string.Format("{0:dd/MM/yyy}", @item.ReleaseDate))</p>
                

                <div>

                    @Html.ActionLink("Reviews: ", "Index", "Reviews", new { id = item.Id }, null) <b>@item.CountOfReviews</b>
                    
                    
                </div>

                <hr />
            </div>


        </div>
    }


</div>